---
import Icon from './Icon.astro'
import type { IconName } from './Icons';

interface Props {
    url: string;
    icon: IconName;
}

const { url, icon } = Astro.props;
---

<a class='social' href={url} rel='me' target='_blank'>
    <Icon name={icon} class='icon' />
    <slot />
</a>

<style lang="scss">
    .social {
        display: flex;
        color: var(--primary);
        margin-top: 1em;
        align-items: center;
        gap: 0.5em;

        &:hover {
            opacity: 0.8;
        }
    }

    @media screen and (max-width: 970px) {
		.social {
            text-indent: -9999999px;
            width: min-content;
            gap: unset;
        }
	}
</style>