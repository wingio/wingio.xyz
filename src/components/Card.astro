---
import { string } from 'astro:schema'

interface Props {
    class?: string
    id?: string
    "data-url"?: string
}
---

<div class={Astro.props.class} id={Astro.props.id} data-url={Astro.props['data-url']}>
    <slot />
</div>

<style>
    div {
        display: flex;
        flex-direction: column;
        border-radius: 16px;
        background-color: var(--containerLow);
        padding: 1.5em;
        box-shadow: 0 1px 2px 1px rgba(0, 0, 0, 0.2);
    }
</style>