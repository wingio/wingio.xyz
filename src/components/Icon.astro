---
import { Icons, type IconName } from '@wing/components/Icons';

interface Props {
	name: IconName;
	label?: string;
	color?: string;
	size?: string;
	class?: string;
}

const { name, label, size = '16px', color } = Astro.props;
const a11yAttrs = label ? ({ 'aria-label': label } as const) : ({ 'aria-hidden': 'true' } as const);
---

<svg
	{...a11yAttrs}
	class={Astro.props.class}
	width="16"
	height="16"
	viewBox="0 0 24 24"
	fill="currentColor"
	set:html={Icons[name]}
/>

<style define:vars={{ 'tint': color, 'size': size }}>
	svg {
		color: var(--tint);
		font-size: var(--size, 16px);
		width: 1em;
		height: 1em;
	}
</style>